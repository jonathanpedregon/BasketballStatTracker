<Window x:Class="BasketballStatTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasketballStatTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1000" Background="CadetBlue">
    <Grid x:Name="PlayerGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="800"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Create New Game" HorizontalAlignment="Left" Margin="332,55,0,0" VerticalAlignment="Top" Width="117" x:Name="CreateNewGameButton" Click="CreateNewGameButton_Click" Grid.Row="0"/>
        <StackPanel x:Name="MainStackPanel" Orientation="Vertical" Grid.Row="1">
            
        </StackPanel>
    </Grid>
</Window>
